<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:background="#FFF"
    android:foregroundTint="#ffffffff">
    <TextView
        android:id="@+id/Medicines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="100dp"
        android:text="#Medicines"
        android:textColor="#698FC1" />
    <TextView
        android:id="@+id/test_button_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:text="Name Of Medicine:"
        android:layout_marginTop="20dp"
        android:textColor="#698FC1" />

    <EditText
        android:id="@+id/nameText"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="#DCDCDC"
        android:inputType="text"
        android:singleLine="true" />

    <TextView
        android:id="@+id/dosage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginLeft="125dp"
        android:text="Dosage:"
        android:layout_marginTop="10dp"
        android:textColor="#698FC1" />

    <Button
        android:id="@+id/set_time"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/emergencybtn"
        android:backgroundTint="#698FC1"
        android:gravity="center"
        android:onClick="timePickFunc"
        android:text="Pick Time"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="25sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/firstTimeNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="3dp"
        android:text="Pills Number:"
        android:textAlignment="center"
        android:textColor="#698FC1"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/dosage1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="20dp"
        android:background="#DCDCDC"
        android:inputType="numberDecimal"
        android:singleLine="true" />
    <TextView
        android:id="@+id/test_button_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="5dp"
        android:text="Warning Message:"
        android:textColor="#698FC1" />

    <EditText
        android:id="@+id/warning"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:singleLine="true"
        android:background="#DCDCDC"
        android:inputType="text"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <Button
        android:id="@+id/save_buttonActive5"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal|center"
        android:layout_marginTop="7dp"
        android:background="@drawable/emergencybtn"
        android:backgroundTint="#698FC1"
        android:gravity="center"
        android:onClick="Finish"
        android:text="Finish"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="30dp"
        android:textStyle="italic" />
</LinearLayout>