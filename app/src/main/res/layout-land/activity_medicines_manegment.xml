<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:background="#FFF"
    android:foregroundTint="#ffffffff">

    <TextView
        android:id="@+id/Medicines"
        android:layout_width="225dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="181dp"
        android:layout_marginLeft="181dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="241dp"
        android:text="#Medicines"
        android:textAlignment="center"
        android:textColor="#698FC1"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/test_button_text2"
        android:layout_width="190dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="184dp"
        android:text="Name Of Medicine:"
        android:textAlignment="center"
        android:textColor="#698FC1"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/nameText"
        android:layout_width="180dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="150dp"
        android:background="#DCDCDC"
        android:inputType="text"
        android:singleLine="true" />

    <TextView
        android:id="@+id/dosage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="229dp"
        android:text="Dosage:"
        android:textAlignment="center"
        android:textColor="#698FC1"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/set_time"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginStart="338dp"
        android:layout_marginLeft="338dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="93dp"
        android:background="@drawable/emergencybtn"
        android:backgroundTint="#698FC1"
        android:gravity="center"
        android:onClick="timePickFunc"
        android:text="Pick Time"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="25sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/firstTimeNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginBottom="118dp"
        android:text="Pills Number:"
        android:textAlignment="center"
        android:textColor="#698FC1"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/dosage1"
        android:layout_width="153dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="72dp"
        android:background="#DCDCDC"
        android:inputType="numberDecimal"
        android:singleLine="true" />

    <TextView
        android:id="@+id/test_button_warning"
        android:layout_width="179dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="364dp"
        android:layout_marginLeft="364dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="174dp"
        android:text="Warning Message:"
        android:textColor="#698FC1"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/warning"
        android:layout_width="214dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="347dp"
        android:layout_marginLeft="347dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="147dp"
        android:background="#DCDCDC"
        android:inputType="text"
        android:singleLine="true" />

    <Button
        android:id="@+id/save_buttonActive5"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal|center"
        android:layout_marginStart="183dp"
        android:layout_marginLeft="183dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="19dp"
        android:background="@drawable/emergencybtn"
        android:backgroundTint="#698FC1"
        android:gravity="center"
        android:onClick="Finish"
        android:text="Finish"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="30dp"
        android:textStyle="italic" />
</RelativeLayout>